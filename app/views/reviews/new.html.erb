<h1>New review</h1>

<div class="form-group">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>

    <%= f.submit "add a review", class: "btn btn-primary" %>
  <% end %>
</div>

<hr>
<%= link_to restaurants_path do %>
  <i class="fa fa-history"></i> Back to list
<% end %>
